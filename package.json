{
  "name": "pr-automation",
  "version": "0.1.0",
  "description": "GitHub Action that automatically requests review of a pull request based on who creates PR and what files were changed",
  "main": "index.ts",
  "scripts": {
    "build": "ncc build ./src/index.ts -o dist",
    "test": "tsc --noEmit && NODE_ENV=test mocha --exit -r ts-node/register \"./src/**/*.spec.ts\"",
    "lint": "eslint -f unix \"src/**/*.@(ts|tsx)\"",
    "lint:fix": "eslint --fix -f unix \"src/**/*.@(ts|tsx)\""
  },
  "keywords": [],
  "license": "MIT",
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/github": "^5.0.3",
    "joi": "^17.6.0",
    "minimatch": "^5.1.0",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@ezetech/eslint-config": "^1.2.1",
    "@types/chai": "^4.3.1",
    "@types/minimatch": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vercel/ncc": "^0.34.0",
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-security": "^1.5.0",
    "mocha": "10.0.0",
    "mocha-typescript": "1.1.17",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "ts-node": "10.9.1",
    "typescript": "^4.7.4"
  }
}
